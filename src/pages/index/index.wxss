.home-page-container {
  padding-top: 100rpx;
}
.topic-tabbar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: #fff;
  overflow-x: auto;
  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
  z-index: 2;
}
.topic-tabbar .topic-tabbar-item {
  float: left;
  width: 20%;
  font-size: 30rpx;
  text-align: center;
  box-sizing: border-box;
}
.topic-tabbar .topic-tabbar-item.topic-tabbar-item-active {
  color: #80bd01;
  font-weight: 500;
}
.topic-list-wrap {
  padding: 20rpx;
}
.topic-list-loading {
  padding: 10rpx;
  font-size: 28rpx;
}
.topic-list-no-data {
  height: calc(100vh - 150rpx);
  font-size: 28rpx;
}
