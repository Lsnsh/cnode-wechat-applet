<view class="message-list-container fadein-init {{bIsReady ? 'fadein' : ''}}">
  <!-- 未读消息列表 -->
  <view class="message-list has-not-red-message-list">
    <!-- 新消息 -->
    <view class="message-list-title">未读消息</view>
    <message-item wx:for="{{aHasNotReadMessageList}}" wx:key="{{item.id}}" data="{{item}}"></message-item>
  </view>
  <!-- 已读消息列表 -->
  <view class="message-list">
    <view class="message-list-title">已读消息</view>
    <message-item wx:for="{{aHasReadMessageList}}" wx:key="{{item.id}}" data="{{item}}"></message-item>
  </view>
</view>