.user-info-container {
  height: 400rpx;
  padding: 100rpx;
  margin-bottom: 30rpx;
  background: #fbfbfb;
  box-sizing: border-box;
}
.user-info-container .user-avatar-wrap {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
}
.user-info-container .user-avatar {
  width: 100%;
  height: 100%;
}
.menu-list {
  padding: 30rpx;
  font-size: 32rpx;
}
.menu-list .menu-item {
  height: 60rpx;
  line-height: 60rpx;
  margin-bottom: 20rpx;
  padding: 20rpx 30rpx;
  color: #2c2c2c;
  box-shadow: 0 2px 12px 0 rgba(0,0,0,.1);
  border-radius: 8rpx;
}
.menu-list .menu-item .icon {
  margin-right: 40rpx;
  font-size: 40rpx;
}